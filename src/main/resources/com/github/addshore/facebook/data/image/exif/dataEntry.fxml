<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="center" spacing="10" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/8.0.91"
      fx:controller="com.github.addshore.facebook.data.image.exif.Controller">
    
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    
    <!-- Facebook data path section -->
    <Label text="Path to extracted facebook data download" style="-fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <JFXTextField fx:id="dirInput" promptText="Example: C:\Users\example\downloads\extracted-facebook-export" 
                      style="-fx-background-color: #d8dfea;" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </JFXTextField>
        <JFXButton fx:id="dirInputBrowse" text="Browse" style="-fx-background-color: #d8dfea;" 
                   ripplerFill="#4059a9">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </JFXButton>
    </HBox>
    
    <!-- ExifTool path section -->
    <Label fx:id="toolLabel" text="Path to exiftool program" style="-fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <JFXTextField fx:id="toolInput" promptText="Example: C:\Users\example\downloads\exiftool.exe" 
                      style="-fx-background-color: #d8dfea;" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </JFXTextField>
        <JFXButton fx:id="toolInputBrowse" text="Browse" style="-fx-background-color: #d8dfea;" 
                   ripplerFill="#4059a9">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </JFXButton>
    </HBox>
    
    <!-- Options section -->
    <VBox spacing="5" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10;">
        <Label text="Options" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        
        <!-- File processing mode -->
        <Label text="File processing mode:" style="-fx-font-weight: bold;"/>
        <VBox spacing="5" style="-fx-padding: 5;">
            <RadioButton fx:id="overwriteOriginalsRadio" text="Overwrite originals" selected="true"/>
            <RadioButton fx:id="copyToProcessedRadio" text="Copy to Processed folder"/>
        </VBox>
        
        <Separator/>
        
        <!-- Processing options -->
        <CheckBox fx:id="processPostsCheckbox" text="Process posts (albums and photos)" selected="true"/>
        <CheckBox fx:id="processMessagesCheckbox" text="Process messages (photos and videos from conversations)" selected="true"/>
        <CheckBox fx:id="processFilesCheckbox" text="Process files (all files with creation_timestamp)" selected="false"/>
    </VBox>
    
    <!-- Action buttons -->
    <HBox spacing="15" alignment="CENTER">
        <JFXButton fx:id="runButton" text="Run" defaultButton="true" 
                   style="-fx-background-color: #8c9fc0;" ripplerFill="#4059a9">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </JFXButton>
        <JFXButton fx:id="dryRunButton" text="Dry Run" 
                   style="-fx-background-color: #d8dfea;" ripplerFill="#4059a9">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </JFXButton>
        <JFXCheckBox fx:id="debugCheckbox" text="Debug (extra output for debugging)" 
                     checkedColor="#6d84b4">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </JFXCheckBox>
    </HBox>
    
    <!-- Note -->
    <Label text="Note: This program currently only works for JSON downloads" 
           underline="true" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
    
    <!-- Footer links -->
    <HBox spacing="20" alignment="CENTER">
        <Label fx:id="versionLabel" text="Version: XXX"/>
        <Hyperlink fx:id="hyperLinkAddshore" text="by Addshore"/>
        <Hyperlink fx:id="hyperLinkCoffee" text="(buy me a coffee)"/>
        <Hyperlink fx:id="hyperLinkExif" text="exiftool by Phil Harvey"/>
    </HBox>
    
</VBox>
